[colors]
;background = ${xrdb:color0:#222}
background = #222
background-alt = #444
;foreground = ${xrdb:color7:#222}
foreground = #dfdfdf
foreground-alt = #555
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

white = #ffffff
green = #398277
red = #c14566

[bar/bar0]
monitor = ${env:MONITOR:LVDS1}
monitor-fallback = LVDS1

width = 100%
height = 18
;offset-x = 1%
;offset-y = 1%
fixed-center = false

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

;padding-left = 2
;padding-right = 2

module-margin-left = 2
module-margin-right = 2

font-0 = "PT Root UI:style=Regular:size=10;2"
font-1 = "FontAwesome:size=9;1"

wm-restack = bspwm

modules-left = bspwm 
modules-center = 
modules-right = mpd layout wireless-network alsa date

;tray-position = right

[module/bspwm]
type = internal/bspwm
pin-workspaces = true
enable-click = false
enable-scroll = false

format = <label-state>

label-empty-padding = 2
label-focused-padding = 2
label-urgent-padding = 2
label-occupied-padding = 2

label-empty = 
label-focused = %name%
label-urgent = %name%
label-occupied = %name%

label-focused-foreground = #ffffff
label-focused-background = #3f3f3f
;label-focused-underline = #fba922

label-urgent-background = ${colors.red}

[module/date]
type = internal/date
interval = 60
label = %date% %time%
date = %a, %d %b
time = %H:%M

[module/wireless-network]
type = internal/network
interface = wlp7s0
interval = 5
label-connected = " %essid% "
label-connected-foreground = ${colors.white}
label-connected-background = ${colors.green}
label-disconnected = "        " 
label-disconnected-background = ${colors.red}

[module/layout]
type = internal/xkeyboard
format = <label-layout>
label-layout = %layout%

[module/alsa]
type = internal/alsa
master-soundcard = default
master-mixer = Master
format-volume = <label-volume>
label-volume = %percentage%

[module/mpd]
type = internal/mpd
host = 127.0.0.1
port = 6600
interval = 2
format-online = <label-song>
format-playing = ${self.format-online}
