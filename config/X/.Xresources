Xft.antialias: true
! Base16 OneDark
! Scheme: Lalit Magant (http://github.com/tilal6991)

#define base00 #282c34
#define base01 #353b45
#define base02 #3e4451
#define base03 #545862
#define base04 #565c64
#define base05 #abb2bf
#define base06 #b6bdca
#define base07 #c8ccd4
#define base08 #e06c75
#define base09 #d19a66
#define base0A #e5c07b
#define base0B #98c379
#define base0C #56b6c2
#define base0D #61afef
#define base0E #c678dd
#define base0F #be5046

#define terminalFont JetBrains Mono:size=14:style=Regular:antialias=true:autohint=true

*foreground:   base05
#ifdef background_opacity
*background:   [background_opacity]base00
#else
*background:   base00
#endif
*cursorColor:  base05

*color0:       base00
*color1:       base08
*color2:       base0B
*color3:       base0A
*color4:       base0D
*color5:       base0E
*color6:       base0C
*color7:       base05

*color8:       base03
*color9:       base08
*color10:      base0B
*color11:      base0A
*color12:      base0D
*color13:      base0E
*color14:      base0C
*color15:      base07

! Note: colors beyond 15 might not be loaded (e.g., xterm, urxvt),
! use 'shell' template to set these if necessary
*color16:      base09
*color17:      base0F
*color18:      base01
*color19:      base02
*color20:      base04
*color21:      base06



! --- ST --- !

st.font: terminalFont

! --- Xterm --- !
XTerm.termName: 	xterm-256color
XTerm.vt100.faceName: 	terminalFont
XTerm*selectToClipboard: true

! --- ROFI --- !

rofi.font:		JetBrains Mono 14
rofi.bw:		2

rofi.color-enabled: 	true

! Property Name     	BG      Border  Separator
rofi.color-window:  	base00, base01, base01
! Property Name     	BG      FG      BG-alt  BG-sel  FG-sel
rofi.color-normal:  	base00, base05, base00, base0A, base00
rofi.color-active:  	base00, base0D, base00, base0A, base00
rofi.color-urgent:  	base00, base08, base00, base0A, base00

rofi.separator-style: 	solid
rofi.sidebar-mode: 	    true
rofi.hide-scrollbar:	true
