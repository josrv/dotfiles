#!/bin/bash
# vi: ft=bash

set -u
set -e
set -o pipefail

# Display services and choose one with Rofi.
items="ğŸ”“ Lock\nğŸ’¤ Sleep\nğŸŒ€ Hibernate\nğŸ® Reboot to Windows\nğŸ”„ Reboot\nâ¹ï¸ Poweroff"

# Choose an action.
action=$(echo -e $items | rofi -dmenu -p "select action" -matching fuzzy -i)

case $action in
    *Lock)
        light-locker-command -l
        ;;
    *Sleep)
        sleep 0.25 && systemctl suspend
        ;;
    *Hibernate)
        systemctl hibernate
        ;;
    *"Reboot to Windows")
        sudo reboot-to-windows
        ;;
    *Reboot)
        reboot
        ;;
    *Poweroff)
        poweroff
        ;;
esac

