#!/bin/bash
# vi: ft=bash

set -u
set -e
set -o pipefail

# Display services and choose one with Rofi.
items="ğŸ’¤ Sleep\nğŸŒ€ Hibernate\nğŸ® Reboot to Windows\nğŸ”„ Reboot\nâ¹ï¸ Poweroff"

# Choose an action.
action=$(echo -e $items | rofi -dmenu -p "select action" -matching fuzzy | cut -d' ' -f2)

case $action in
    Sleep)
        systemctl suspend
        ;;
    Hibernate)
        systemctl hibernate
        ;;
    Reboot to Windows)
        sudo reboot-to-windows
        ;;
    Reboot)
        reboot
        ;;
    Poweroff)
        poweroff
        ;;
esac

